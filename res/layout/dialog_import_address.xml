<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="150dp"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@android:color/white"
  android:focusable="true"
  android:focusableInTouchMode="true" >
  
  <TextView
    android:id="@+id/import_address_dialog_private_signing_key_textview"
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="@string/import_address_dialog_private_signing_key_label"
    />
    
  <EditText
    android:id="@+id/import_address_dialog_private_signing_key_edittext"
    android:layout_width="fill_parent"
    android:layout_height="43dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:textSize="10.5sp"
    android:minLines="2"
    android:inputType="textMultiLine"
    />
  
    <LinearLayout 
 	  android:layout_width="match_parent"
 	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
 	  >
  	  
  	  <Button 
	    android:id="@+id/import_address_dialog_private_signing_key_scan_qr_code_button"
	    android:layout_width="100dp"
	    android:layout_height="40dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:gravity="center"
	    android:textSize="14sp"
	    android:hint="@string/import_address_dialog_private_signing_key_scan_qr_code_button_label"
	    />
	    
	</LinearLayout>
  
  <TextView
    android:id="@+id/import_address_dialog_private_encryption_key_textview"
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="@string/import_address_dialog_private_encryption_key_label_title"
    />
    
  <EditText
    android:id="@+id/import_address_dialog_private_encryption_key_edittext"
    android:layout_width="fill_parent"
    android:layout_height="43dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:textSize="10.5sp"
    android:minLines="2"
    android:inputType="textMultiLine"
    />
  
  	<LinearLayout 
 	  android:layout_width="match_parent"
 	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
 	  >
  	  
  	  <Button 
	    android:id="@+id/import_address_dialog_private_encryption_key_scan_qr_code_button"
	    android:layout_width="100dp"
	    android:layout_height="40dp"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:gravity="center"
	    android:textSize="14sp"
	    android:hint="@string/import_address_dialog_private_encryption_key_scan_qr_code_button_label"
	    />
	    
	</LinearLayout>
	
  <Button 
    android:id="@+id/import_address_dialog_import_button"
    android:layout_width="300dp"
    android:layout_height="45dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_gravity="center"
    android:textSize="20sp"
    android:hint="@string/import_address_dialog_import_button_label"
    />

</LinearLayout>