<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="150dp"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@android:color/white" >
    
  <TextView
    android:id="@+id/addressBook_dialog_new_entry_label_textview"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="@string/addressBook_dialog_new_entry_label_title"
    />
    
  <EditText
    android:id="@+id/addressBook_dialog_new_entry_label_edittext"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:textIsSelectable="true"
    android:textSize="14sp"
    android:inputType="textCapWords|textNoSuggestions"
    />
  
  <TextView
    android:id="@+id/addressBook_dialog_new_entry_address_textview"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:textIsSelectable="true"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="@string/addressBook_dialog_new_entry_address_title" 
    />
  
  <EditText
    android:id="@+id/addressBook_dialog_new_entry_address_edittext"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:inputType="textNoSuggestions"
    />
  
  	<LinearLayout 
 	  android:layout_width="match_parent"
 	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
 	  >
 	  
  	  <Button 
	    android:id="@+id/addressBook_dialog_new_entry_scan_qr_code_button"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_weight="1"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="6dp"
	    android:layout_marginRight="2dp"
	    android:textSize="14sp"
	    android:hint="@string/addressBook_dialog_new_entry_scan_qr_code_button_label"
	    />
  
	  <Button 
	    android:id="@+id/addressBook_dialog_new_entry_save_button"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_weight="1"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:textSize="14sp"
	    android:hint="@string/addressBook_dialog_new_entry_save_button_label" 
	    />
  
	  <Button 
	    android:id="@+id/addressBook_dialog_new_entry_cancel_button"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_weight="1"
	    android:layout_marginTop="0dp"
	    android:layout_marginBottom="8dp"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="6dp"
	    android:textSize="14sp"
	    android:hint="@string/addressBook_dialog_new_entry_cancel_button_label"
	    />
	  
	</LinearLayout>

</LinearLayout>